<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="dragolandiaServizo">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <exclude-unlisted-classes>false</exclude-unlisted-classes><!-- para que non teÃ±amos que especificar todas as entidades -->

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dragolandia"/>
            <property name="jakarta.persistence.jdbc.user" value="dam2user"/>
            <property name="jakarta.persistence.jdbc.password" value="1234.."/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>